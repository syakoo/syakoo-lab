{
  "mcpServers": {
    "Figma": {
      "command": "npx",
      "args": [
        "-y",
        "figma-developer-mcp",
        "--figma-api-key",
        "$FIGMA_API_KEY",
        "--stdio"
      ]
    },
    "GitHub": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"]
    },
    "Playwright": {
      "command": "npx",
      "args": ["@playwright/mcp@latest"]
    }
  }
}
